        <arguments>
          <argument>
            <kind>1</kind>
            <string>/// Process views

var _px = ob_player.X
var _py = ob_player.Y

var _px2 = ob_player_2.X
var _py2 = ob_player_2.Y

var _ahead = view_hview[0] * 0.1

switch ob_player.dir {
case d.Left:
    _px -= _ahead
    break;    
case d.Right:
    _px += _ahead
    break;    
case d.Up:
    _py -= _ahead
    break;    
case d.Down:
    _py += _ahead
    break;    
}

switch ob_player_2.dir {
case d.Left:
    _px2 -= _ahead
    break;    
case d.Right:
    _px2 += _ahead
    break;    
case d.Up:
    _py2 -= _ahead
    break;    
case d.Down:
    _py2 += _ahead
    break;    
}

var _dx = abs(_px - _px2)
var _dy = abs(_py - _py2)


if (_dx &gt; view_wview[0] * 0.75) or 
   (_dy &gt; view_hview[0] * 0.65) {
    if viewMode&lt;&gt;2 {
        viewMode = 2
        sc_view_changemode(viewMode)
    } 
} else
if (_dx &lt; view_wview[0] * 0.7) or 
   (_dy &lt; view_hview[0] * 0.6) {
    if viewMode&lt;&gt;1 {
        viewMode = 1
        sc_view_changemode(viewMode)
    } 
}


switch viewMode {
case 1:
    _px = (_px + _px2) * 0.5;
    _py = (_py + _py2) * 0.5;
    _px -= view_wview[1] * 0.5
    _py -= view_hview[1] * 0.5
    sc_view_move(1, _px, _py)
    break
    
case 2:
    // view 1
    _px = _px - view_wview[1] * 0.5
    _py = _py - view_hview[1] * 0.5
    sc_view_move(1, _px, _py)
    
    // view 2    
    _px2 = _px2 - view_wview[2] * 0.5
    _py2 = _py2 - view_hview[2] * 0.5
    sc_view_move(2, _px2, _py2)

    break
}


</string>
